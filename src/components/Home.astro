---
import { useTranslations } from "../i18n/utils";
import { Mail, ArrowRight } from "lucide-astro";

const { lang } = Astro.props;
const t = useTranslations(lang);
---

<section
  class="min-h-[30vh] flex items-center justify-center mt-8 bg-background text-foreground"
  aria-label="Profile introduction section"
>
  <div
    class="relative max-w-4xl w-full flex flex-col items-center sm:items-start gap-3 text-center sm:text-left"
  >
    <div class="relative w-full">
      <span
        class="absolute left-0 text-accent text-sm rotate-2 font-semibold"
        aria-hidden="true"
      >
        ðŸ‘‹ {t("profile.span")}
      </span>

      <span class="block mt-6 text-sm text-secondary">
        {t("profile.span.text")}
      </span>
    </div>

    <h2 class="text-lg sm:text-xl text-primary font-semibold">
      Jhon Arciniegas
    </h2>

    <span class="text-sm text-secondary -mt-1">
      {t("profile.span.text1")}
    </span>

    <h3
      class="text-3xl sm:text-4xl font-extrabold tracking-tight bg-gradient-to-r from-orange-400 via-pink-500 to-purple-600 bg-clip-text text-transparent animate-text-glow"
    >
      {t("profile.role")}
    </h3>

    <p class="text-secondary max-w-md leading-relaxed mt-2">
      {t("profile.description")}
    </p>

    <a
      href="mailto:arcibyte@gmail.com"
      class="group relative mt-4 inline-flex items-center gap-2.5 text-foreground text-sm font-medium px-5 py-2.5 rounded-lg border border-foreground/10 hover:border-foreground/30 backdrop-blur-sm hover:bg-foreground/5 transition-all duration-300 overflow-hidden"
      aria-label={t("profile.cta.aria")}
    >
      <span
        class="absolute inset-0 w-0 bg-foreground/5 transition-all duration-500 ease-out group-hover:w-full"
      ></span>

      <Mail
        class="relative z-10 w-4 h-4 group-hover:rotate-12 transition-transform duration-300"
        strokeWidth={1.5}
      />

      <span class="relative z-10 tracking-wide">{t("profile.cta")}</span>

      <ArrowRight
        class="relative z-10 w-3.5 h-3.5 opacity-60 group-hover:opacity-100 group-hover:translate-x-0.5 transition-all duration-300"
        strokeWidth={2}
      />
    </a>
  </div>
</section>
