---
import { projects } from "../data/projects";
import { useTranslations } from "../i18n/utils";

const { lang } = Astro.props;
const t = useTranslations(lang);
---

<h3
  class="mt-12 mb-8 text-3xl font-bold text-lime-300 tracking-tight text-center"
>
  {t("projects.title")}
</h3>

<section class="grid grid-cols-1 sm:grid-cols-2 gap-8 max-w-5xl mx-auto mb-20">
  {
    projects.map((project) => (
      <article class="flex flex-col justify-between rounded-xl border border-neutral-800 bg-gradient-to-br from-[#0f172a] via-[#1e293b] to-[#0f172a] p-6 shadow-md">
        <h4 class="text-xl font-semibold text-cyan-300 mb-2">
          {t(project.titleKey)}
        </h4>
        <p class="text-gray-300 text-sm mb-4">{t(project.descriptionKey)}</p>

        <div class="flex gap-4 text-xs font-medium text-lime-300">
          <a
            href={project.projectUrl}
            target="_blank"
            rel="noopener noreferrer"
            class="underline hover:text-lime-400"
          >
            {t("projects.view")}
          </a>
          {project.githubUrl && (
            <a
              href={project.githubUrl}
              target="_blank"
              rel="noopener noreferrer"
              class="underline hover:text-lime-400"
            >
              {t("projects.code")}
            </a>
          )}
        </div>
      </article>
    ))
  }
</section>
