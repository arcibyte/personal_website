---
import { useTranslations } from "../i18n/utils";
const { lang } = Astro.props;
const t = useTranslations(lang);
---

<section
  class="py-16 bg-gradient-to-b from-gray-900 via-gray-800 to-gray-900 text-gray-200"
>
  <div class="max-w-6xl mx-auto px-6 space-y-10">
    <div class="text-center">
      <h2 class="text-3xl sm:text-4xl font-bold text-lime-300 tracking-tight">
        {t("opensource.title")}
      </h2>
      <p class="mt-3 text-gray-400 max-w-2xl mx-auto">
        {t("opensource.description")}
      </p>
    </div>

    <div class="grid sm:grid-cols-2 gap-8">
      <!-- Card 1 -->
      <div
        class="bg-gray-800/80 backdrop-blur-sm border border-gray-700 p-6 rounded-2xl shadow-lg hover:shadow-2xl transition-all duration-300 hover:scale-[1.02]"
      >
        <h3 class="text-xl font-semibold text-cyan-300 mb-2">
          {t("opensource.card1.title")}
        </h3>
        <p class="text-gray-400 text-sm leading-relaxed">
          {t("opensource.card1.description")}
        </p>
        <a
          href="https://github.com/"
          target="_blank"
          class="mt-4 inline-flex items-center gap-1 text-lime-300 hover:underline"
        >
          {t("opensource.view")} →
        </a>
      </div>

      <!-- Card 2 -->
      <div
        class="bg-gray-800/80 backdrop-blur-sm border border-gray-700 p-6 rounded-2xl shadow-lg hover:shadow-2xl transition-all duration-300 hover:scale-[1.02]"
      >
        <h3 class="text-xl font-semibold text-cyan-300 mb-2">
          {t("opensource.card2.title")}
        </h3>
        <p class="text-gray-400 text-sm leading-relaxed">
          {t("opensource.card2.description")}
        </p>
        <a
          href="https://github.com"
          target="_blank"
          class="mt-4 inline-flex items-center gap-1 text-lime-300 hover:underline"
        >
          {t("opensource.view")} →
        </a>
      </div>
    </div>
  </div>
</section>
