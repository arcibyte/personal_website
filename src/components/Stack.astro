---
import techData from "../data/techData";
import { useTranslations } from "../i18n/utils";

const { lang } = Astro.props;
const t = useTranslations(lang);

const techStack = [
  { name: "React" },
  { name: "TailwindCSS" },
  { name: "JavaScript" },
  { name: "TypeScript" },
  { name: "Astro" },
  { name: "Python" },
  { name: "Linux" },
  { name: "Git" },
];
---

<section>
  <h3 class="mb-10 text-3xl font-bold text-lime-300 tracking-tight text-center">
    {t("stack.title")}
  </h3>

  <div
    class="grid grid-cols-2 sm:grid-cols-3 md:grid-cols-4 gap-6 max-w-5xl mx-auto"
  >
    {
      techStack.map((tech) => {
        const techInfo = techData.find((t) => t.name === tech.name);
        if (!techInfo) return null;
        return (
          <div class="flex flex-col items-center justify-center gap-3 px-5 py-3 rounded-2xl border border-gray-700/40 bg-gradient-to-br from-gray-900/50 to-gray-800/50 backdrop-blur-sm shadow-lg text-gray-100">
            <div class="bg-gray-800/80 p-3 rounded-full border border-gray-700">
              <img
                src={techInfo.icon}
                class="w-10 h-10 object-contain"
                alt={`${tech.name} Icon`}
                loading="lazy"
              />
            </div>
            <span class="text-sm tracking-wide text-gray-200">{tech.name}</span>
          </div>
        );
      })
    }
  </div>
</section>
