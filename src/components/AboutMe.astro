---
// src/components/AboutMe.astro
import { useTranslations } from "../i18n/utils";
const { lang } = Astro.props;
const t = useTranslations(lang);
---

<section class="relative py-20 px-2 sm:px-4 text-white overflow-hidden">
  <div
    class="max-w-5xl mx-auto flex flex-col items-center text-center space-y-6"
  >
    <!-- TÃ­tulo creativo -->
    <h2
      class="text-3xl sm:text-4xl font-bold text-[#CCFF66] relative inline-block"
    >
      {t("aboutme.title")}
      <span class="absolute -top-6 -right-12 text-sm text-cyan-300 rotate-3">
        ðŸŒŸ {t("aboutme.highlight")}
      </span>
    </h2>

    <h3
      class="text-xl font-semibold text-cyan-300 relative after:block after:h-0.5 after:bg-cyan-300 after:w-24 after:mt-1"
    >
      {t("aboutme.subtitle")}
    </h3>

    <!-- PÃ¡rrafo descriptivo -->
    <p class="text-gray-300 max-w-2xl leading-relaxed relative">
      {t("aboutme.paragraph.1")}
      <span class="text-cyan-300 relative inline-block mx-1">
        <svg
          class="absolute -left-4 -top-2 w-4 h-4 text-cyan-300"
          viewBox="0 0 24 24"
          fill="currentColor"
        >
          <path
            d="M9 17H7c-1.1 0-2-.9-2-2V7h4v10zM19 17h-2c-1.1 0-2-.9-2-2V7h4v10z"
          ></path>
        </svg>
        {t("aboutme.why")}
        <svg
          class="absolute -right-4 -bottom-2 w-4 h-4 text-cyan-300"
          viewBox="0 0 24 24"
          fill="currentColor"
        >
          <path d="M15 7h4v8c0 1.1-.9 2-2 2h-2V7zM5 7h4v8c0 1.1-.9 2-2 2H5V7z"
          ></path>
        </svg>
      </span>
      {t("aboutme.paragraph.2")}<br /><br />
      {t("aboutme.paragraph.3")}
    </p>

    <!-- Hashtags -->
    <div class="flex flex-wrap justify-center gap-3 mt-6">
      <span
        class="border border-cyan-300 text-cyan-300 px-3 py-1 rounded-full text-sm font-mono"
        >#CreativeCode</span
      >
      <span
        class="border border-[#CCFF66] text-[#CCFF66] px-3 py-1 rounded-full text-sm font-mono"
        >#MathLover</span
      >
      <span
        class="border border-cyan-300 text-cyan-300 px-3 py-1 rounded-full text-sm font-mono"
        >#UXDev</span
      >
      <span
        class="border border-[#CCFF66] text-[#CCFF66] px-3 py-1 rounded-full text-sm font-mono"
        >#DataDriven</span
      >
    </div>
  </div>

  <!-- DecoraciÃ³n SVG -->
  <svg
    class="absolute bottom-8 left-8 w-10 h-10 text-[#CCFF66] rotate-[15deg]"
    viewBox="0 0 24 24"
    fill="none"
    stroke="currentColor"
    stroke-width="2"
  >
    <path d="M12 2v20M2 12h20M4 4l16 16M20 4L4 20"></path>
  </svg>
</section>
