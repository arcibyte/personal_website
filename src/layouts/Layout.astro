---
interface Props {
  title: string;
}

const { title } = Astro.props;
import Header from "../components/Navbar.astro";
import Footer from "../components/Footer.astro";

const currentLang = Astro.currentLocale || "es";
---

<!doctype html>
<html lang={currentLang}>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <meta name="author" content="Jhon Arciniegas" />
    <link rel="icon" href="/img/icon.png" />

    <!-- Open Graph Meta Tags -->
    <meta property="og:type" content="website" />
    <meta property="og:title" content="Jhon Arciniegas | Portfolio" />
    <meta
      property="og:description"
      content="Applied data science, machine learning, and software engineering."
    />
    <meta
      property="og:image"
      content="https://arcibyte.vercel.app/img/OP.jpg"
    />
    <meta property="og:image:width" content="1620" />
    <meta property="og:image:height" content="1080" />
    <meta property="og:url" content="https://www.arcibyte.vercel.app" />
    <meta property="og:site_name" content="Jhon Arciniegas | Portfolio" />

    <!-- Twitter Meta Tags -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content="Data Science & AI Engineer" />
    <meta
      name="twitter:description"
      content="Data science practitioner bridging intelligent systems and modern interfaces."
    />
    <meta
      name="twitter:image"
      content="https://arcibyte.vercel.app/img/OP.jpg"
    />
    <meta
      name="twitter:image:alt"
      content="Portfolio preview of Jhon Arciniegas | Data Science and AI Engineer"
    />

    <title>{title}</title>
  </head>

  <body
    class="bg-background text-text dark:bg-background-dark dark:text-white p-4 sm:p-0 mx-auto max-w-[580px] text-base font-sans"
  >
    <Header />
    <slot />
    <Footer />
  </body>
</html>

<style is:global>
  @font-face {
    font-family: "Inter-Regular";
    src: url(../../public/fonts/Inter-Regular.otf) format("opentype");
    font-weight: 400;
    font-style: normal;
    font-display: swap;
  }

  h1,
  h2,
  h3,
  h4,
  h5 {
    font-family: "Inter-Regular", sans-serif;
  }

  span {
    font-family: "Inter-Regular", sans-serif;
  }
  p {
    font-family: "Inter-Regular";
  }
  a {
    font-family: "Inter-Regular";
  }
</style>
