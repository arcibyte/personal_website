---
interface Props {
  title: string;
}

const { title } = Astro.props;
import Header from "../components/Navbar.astro";
import Footer from "../components/Footer.astro";

const currentLang = Astro.currentLocale || "es";
---

<!doctype html>
<html lang={currentLang}>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <meta name="author" content="Jhon Arciniegas" />
    <link rel="icon" href="/img/icon.png" />

    <!-- Open Graph Meta Tags -->
    <meta property="og:type" content="website" />
    <meta
      property="og:title"
      content="Jhon Arciniegas | Data Science & AI Engineer"
    />
    <meta
      property="og:description"
      content="Portfolio of Jhon Arciniegas â€” Data Science and AI Engineer with a strong foundation in frontend development. Focused on merging intelligent systems with modern web technologies using JavaScript, React, TypeScript, and Tailwind CSS."
    />
    <meta
      property="og:image"
      content="https://www.arcibyte.vercel.app/img/OP.jpg"
    />
    <meta property="og:image:width" content="1620" />
    <meta property="og:image:height" content="1080" />
    <meta property="og:url" content="https://www.arcibyte.vercel.app" />
    <meta property="og:site_name" content="Jhon Arciniegas | Portfolio" />

    <!-- Twitter Meta Tags -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta
      name="twitter:title"
      content="Jhon Arciniegas | Data Science & AI Engineer"
    />
    <meta
      name="twitter:description"
      content="Bridging frontend development with intelligent systems. Specialized in React, TypeScript, and modern data-driven solutions using AI and data science."
    />
    <meta
      name="twitter:image"
      content="https://www.arcibyte.vercel.app/img/OP.jpg"
    />
    <meta
      name="twitter:image:alt"
      content="Portfolio preview of Jhon Arciniegas | Data Science and AI Engineer"
    />

    <title>{title}</title>
  </head>

  <body class="p-4 sm:p-0 mx-auto max-w-[580px] text-base">
    <Header />
    <slot />
    <Footer />
  </body>
</html>

<style is:global>
  html {
    background-color: #101726;
    font-family: "Rubik-Regular";
    font-weight: 400;
    font-style: normal;
    font-display: swap;
  }
  @font-face {
    font-family: "Rubik-Regular";
    src: url(../../public/fonts/Rubik-Regular.woff) format("woff");
    font-weight: 500;
    font-style: normal;
    font-display: swap;
  }
  @font-face {
    font-family: "Rubik-Bold";
    src: url(../../public/fonts/Rubik-Bold.woff) format("woff");
    font-style: normal;
    font-display: swap;
  }
  h1,
  h2,
  h3,
  h4,
  h5 {
    color: #ccff66;
    font-family: "Rubik-Bold";
  }
  p {
    color: #d3d4d4;
  }
  span {
    font-family: "Rubik-Regular";
  }
</style>
