---
import Layout from "./Layout.astro";
const { frontmatter } = Astro.props;
---

<Layout title={frontmatter.title}>
  <section class="relative max-w-3xl mx-auto py-6 bg-background">
    <div class="mb-12 text-center">
      <h1 class="text-2xl font-bold text-foreground tracking-tight">
        {frontmatter.title}
      </h1>
      <div class="mt-4 inline-block h-[2px] w-16 bg-accent rounded-sm"></div>
    </div>

    <!-- Content Slot -->
    <article
      class="prose prose-invert prose-headings:text-foreground prose-a:text-accent prose-strong:text-accent prose-code:rounded prose-code:px-1.5 prose-code:py-1 max-w-none text-secondary leading-relaxed"
    >
      <slot />
    </article>

    <!-- Decorative Touch: Abstract line pattern -->
    <div
      class="absolute top-10 right-4 w-12 h-12 sm:w-20 sm:h-20 opacity-10 pointer-events-none"
    >
      <svg viewBox="0 0 100 100" class="w-full h-full text-accent">
        <path
          d="M0 0 L100 100 M100 0 L0 100"
          stroke="currentColor"
          stroke-width="2"></path>
      </svg>
    </div>
  </section>
</Layout>
